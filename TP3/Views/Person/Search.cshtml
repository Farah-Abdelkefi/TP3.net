@model TP3.Models.Person
@{
    ViewData["Title"] = "Search";
}
@{
    if (ViewBag.notFound)
    {
        <div class="alert-danger">
            This person doesn't exist.Please verify the informations !
        </div>

    }
}

<h3>Enter the first name and the country </h3>
<br />

<div class="row">
    <div class="col-md-4">
        <form asp-action="search">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input name="first_name" asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="Country" class="control-label"></label>
                <input name="country" asp-for="Country" class="form-control" />
                <span asp-validation-for="Country" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <input type="submit" value="Search" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<br>
<div>
